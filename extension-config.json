{
  "version": "1.0.0",
  "id": "@shopgate/pdp-native-share",
  "components": [
    {
      "id": "ShareButton",
      "path": "frontend/portals/ShareButton",
      "target": "product.ctas.before",
      "type": "portals"
    }
  ],
  "steps": [
  ],
  "configuration": {
    "iOSIcon": {
      "type": "admin",
      "destination": "frontend",
      "default": "ios",
      "params": {
        "required": true,
        "type": "text",
        "label": "iOS icon style"
      }
    },
    "gmdIcon": {
      "type": "admin",
      "destination": "frontend",
      "default": "gmd",
      "params": {
        "required": true,
        "type": "text",
        "label": "Google Material Design icon style"
      }
    }
  }
}

